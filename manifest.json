{

  "name": "Chromegle - Full Omegle Client",
  "description": "Omegle Chat Automation",
  "author": "Isaac Kogan",
  "homepage_url": "https://github.com/isaackogan",

  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {"16": "resources/favicon.png", "48": "resources/favicon.png", "128": "resources/favicon.png"},

  "content_scripts": [
    {
      "css": [
        "resources/chromegle.css"
      ],
      "js": [
        "resources/jquery-2.1.1.min.js",
        "resources/js-cookie@2.2.1.js",
        "src/chromegle.js",
        "src/utilities.js",
        "src/buttons.js"
      ],
      "matches": [
        "*://*.omegle.com/*"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["/resources/buttons/*", "/resources/images/*","src/injection/rtcscrape.js", "/src/injection/darkmode.js", "/src/injection/banned.html"],
      "matches": ["*://*.omegle.com/*"]
    }
  ],

  "incognito": "split",
  "permissions": ["storage"],
  "externally_connectable": {"matches": ["*://*.omegle.com/*"]}

}